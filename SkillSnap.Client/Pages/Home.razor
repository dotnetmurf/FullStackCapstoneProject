@page "/"

<PageTitle>Home - SkillSnap</PageTitle>

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4">Welcome to SkillSnap</h1>
        <p class="lead">Your Portfolio Management Solution</p>
        <hr class="my-4">
        <p>Manage your professional portfolio, showcase your projects, and highlight your skills.</p>
        <div class="mt-4">
            <a href="/portfoliousers" 
               class="btn btn-primary btn-lg me-3"
               data-bs-toggle="tooltip" 
               data-bs-placement="bottom" 
               title="Browse all portfolio users and their projects">
                <i class="bi bi-people-fill me-2"></i>View All Portfolios
            </a>
            <a href="/login" 
               class="btn btn-outline-primary btn-lg"
               data-bs-toggle="tooltip" 
               data-bs-placement="bottom" 
               title="Sign in to create and manage your portfolio">
                <i class="bi bi-box-arrow-in-right me-2"></i>Get Started
            </a>
        </div>
    </div>
</div>
